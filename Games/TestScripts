local Luna = loadstring(game:HttpGet("https://raw.githubusercontent.com/Nebula-Softworks/Luna-Interface-Suite/refs/heads/master/source.lua", true))()

local Window = Luna:CreateWindow({
    Name = "Global Script's",
    Subtitle = "One Block | @universalscriptsroblox | Free",
    LogoID = "91154874732986",
    LoadingEnabled = false,
    LoadingTitle = "Loading script.",
    LoadingSubtitle = "Global Script's",

    ConfigSettings = {
        RootFolder = nil,
        ConfigFolder = "Global Script"
    },

    KeySystem = false,
})

local HomeTab = Window:CreateTab({
    Name = "Home",
    Icon = "cloud_queue",
    ImageSource = "Material",
    ShowTitle = true
})

HomeTab:CreateLabel({
    Text = "Giving Currency",
    Style = 1
})

-- хранение значения слайдера
getgenv().ValueCooldown = 1  

HomeTab:CreateSlider({
    Name = "Cooldown of spawn's",
    Range = {0, 10},
    Increment = 0.001,
    CurrentValue = 1,
    Callback = function(val)
        getgenv().ValueCooldown = val
    end
})

HomeTab:CreateToggle({
    Name = "Farm Money",
    CurrentValue = false,
    Callback = function(Value)
        if Value then
            getgenv().AutoMoney = true

            local ReplicatedStorage = game:GetService("ReplicatedStorage")
            local MagnetRemote = ReplicatedStorage:WaitForChild("Tutorial_MagnetActivated")
            local PickupRemote = ReplicatedStorage:WaitForChild("RequestLootPickup")

            task.spawn(function()
                while getgenv().AutoMoney do
                    pcall(function()
                        MagnetRemote:FireServer()
                    end)

                    local startTime = tick()
                    while tick() - startTime < getgenv().ValueCooldown and getgenv().AutoMoney do
                        for _, block in ipairs(workspace:GetChildren()) do
                            if block.Name == "OakLogDROP" then
                                pcall(function()
                                    PickupRemote:InvokeServer(block)
                                end)
                            end
                        end
                        task.wait()
                    end
                end
            end)
        else
            getgenv().AutoMoney = false
        end
    end
})

HomeTab:CreateLabel({
    Text = "Credits",
    Style = 1
})

Luna:Notification({
    Title = "Gui is succesfully loaded!",
    Icon = "notifications_active",
    ImageSource = "Material",
    Content = "Now, script is ready for use!"
})

task.wait(2)

local advertses = {
    "Did you know? You can find scripts in telegram @universalscriptsroblox?",
    "Try premium plus and unlock more functions!",
    "Developers are updating the script!"
}

Luna:Notification({
    Title = "Advertise",
    Icon = "notifications_active",
    ImageSource = "Material",
    Content = advertses[math.random(#advertses)]
})
