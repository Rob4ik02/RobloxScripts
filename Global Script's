local Players = game:GetService("Players")
local player = Players.LocalPlayer
local place = game.PlaceId
local regionserver = game:GetService("Workspace").CurrentCamera:FindFirstChild("RegionServer")
local PlaceId = game.PlaceId

local Luna = loadstring(game:HttpGet("https://raw.githubusercontent.com/Nebula-Softworks/Luna-Interface-Suite/refs/heads/master/source.lua", true))()

local Window = Luna:CreateWindow({
    Name = "Global Script's", -- Заголовок вашего окна
    Subtitle = "Hub Script's v1.0.0 | @universalscriptsroblox", -- Подзаголовок
    LogoID = "91154874732986", -- ID логотипа
    LoadingEnabled = true, -- Включить анимацию загрузки
    LoadingTitle = "Loading script.", -- Заголовок для загрузки
    LoadingSubtitle = "Global Script's", -- Подзаголовок для загрузки

    ConfigSettings = {
        RootFolder = nil,
        ConfigFolder = " Global Script " -- Название папки для конфигураций
    },

    KeySystem = false, -- Включить систему ключей
    KeySettings = {
        Title = "Global Script's Key",
        Subtitle = "Key System",
        Note = "Please enter the key to use this script.",
        SaveInRoot = false,
        SaveKey = false,
        Key = {"GlobalScript_TestKey1"},
        SecondAction = {
            Enabled = true,
            Type = "Telegram",
            Parameter = "t.me/@universalscriptsroblox"
        }
    }
})

-- [[ TAB Home ]] --

local HomeTab = Window:CreateTab({
    Name = "Home",
    Icon = "cloud_queue",
    ImageSource = "Material",
    ShowTitle = true
})

local BigLabel1 = HomeTab:CreateParagraph({
    Title = "Status key",
    Text = "Duration: Infinity, Active"
})

local BigLabel2 = HomeTab:CreateParagraph({
    Title = "Status place",
    Text = "Place ID: "..place..", Time server: "..(regionserver and regionserver.Value or "N/A"),
})

local BigLabel3 = HomeTab:CreateParagraph({
    Title = "Status player",
    Text = "Player: "..player.Name..", User ID: "..player.UserId,
})

